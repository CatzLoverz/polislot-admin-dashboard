# === Tahap 1: Composer ===
FROM composer:2.8 AS composer

# === Tahap 2: PHP + Apache ===
FROM php:8.3-apache

# Set working directory
WORKDIR /var/www/html

# Tahap A: Instal dependensi sistem
RUN apt-get update && apt-get install -y \
    git \
    unzip \
    libzip-dev \
    libpng-dev \
    libjpeg62-turbo-dev \
    libfreetype6-dev \
    mariadb-client \
    libexif-dev \
    libonig-dev \
    && rm -rf /var/lib/apt/lists/*

# Tahap B: Instal ekstensi GD (karena butuh configure)
RUN docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install -j$(nproc) gd

# Tahap C: Instal ekstensi lainnya
RUN docker-php-ext-install -j$(nproc) pdo_mysql mbstring zip exif pcntl bcmath

# Salin Composer dari tahap pertama
COPY --from=composer /usr/bin/composer /usr/bin/composer

# Salin konfigurasi Virtual Host Apache
COPY apache-vhost.conf /etc/apache2/sites-available/000-default.conf

# Aktifkan mod_rewrite
RUN a2enmod rewrite

# Atur permission Laravel
# Tambahkan '|| true' untuk mengabaikan error jika folder belum ada
RUN chown -R www-data:www-data /var/www/html \
    && chmod -R 775 storage bootstrap/cache || true

# Expose port default Apache
EXPOSE 80

# Jalankan Apache di foreground
CMD ["sh", "-c", "chown -R www-data:www-data storage bootstrap/cache && chmod -R 775 storage bootstrap/cache && apache2-foreground"]